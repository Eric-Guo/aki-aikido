<p id="notice"><%= notice %></p>

<h1>最新动态</h1>

<div class="row">
  <% @posts.each do |post| %>
    <div class="col-md-8">
      <p><%= link_to "[#{post.created_at.strftime("%Y-%m-%d")}]  #{post.title}", post, class: "black" %></p>
    </div>
    <div class="col-md-4">
      <ul class="list-inline">
        <li><p><%#= link_to 'Edit', edit_post_path(post) %></p></li>
        <li><p><%#= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></p></li>
      </ul>
    </div>
  <% end %>
</div>

